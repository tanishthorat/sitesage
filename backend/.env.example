# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/sitesage
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=SiteSage API
VERSION=1.0.0
DESCRIPTION=Automated SEO Performance Analyzer

# CORS Configuration
# Add your production frontend URL here
CORS_ORIGINS=["http://localhost:3000","http://frontend:3000"]

# Security: Internal API Key for BFF Pattern
# CRITICAL: This must match the INTERNAL_API_KEY in frontend/.env.local
# Generate with: openssl rand -hex 32
INTERNAL_API_KEY=your_super_secret_internal_api_key_here

# Google Gemini API
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Crawler Configuration
CRAWLER_TIMEOUT=10
CRAWLER_USER_AGENT=Mozilla/5.0 (compatible; SiteSage/1.0)

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30

# Ephemeral Storage - Guest Report Cleanup
# Guest reports (user_id=NULL) older than this period will be auto-cleaned
GUEST_REPORT_RETENTION_HOURS=24

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development
DEBUG=true
